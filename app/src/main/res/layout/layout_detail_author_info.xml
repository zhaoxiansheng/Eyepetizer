<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#55ffffff" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/pgc_default_avatar" />

    <com.example.zhaoy.eyepetizer.ui.view.common.PercentTextView
        android:id="@+id/attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/rect_radius"
        android:padding="5dp"
        android:text="+关注"
        android:textColor="@color/white"
        android:textSize="30px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_toStartOf="@id/attention"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.example.zhaoy.eyepetizer.ui.view.common.JumpShowTextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.zhaoy.eyepetizer.ui.view.common.JumpShowTextView
            android:id="@+id/tv_author_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>